@model ECommerce.Models.Customer

@{
    ViewBag.Title = "Order Submitted";
}

<div class="pageHeader page-header">
    <h2>Thank you, @Model.FirstName !</h2>
</div>

<div class="container">
    <svg width="100%" height="100">
        <defs>
            <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color:rgb(186,283,217);stop-opacity:0.85" />
                <stop offset="100%" style="stop-color:rgb(66,139,202);stop-opacity:0.85" />
            </linearGradient>
        </defs>
        <rect width="100%" height="100" x="0" y="0" fill="url(#grad1)" />
        <foreignObject width="100%" height="100" class="text-center">
            <p style="padding:3%">Your order was successfully placed. We'll ship your items as soon as possible. Please check your email for order confimation</p>
        </foreignObject>
    </svg>

    <div class="btn-group text-center" style="padding:10px">
        @Html.ActionLink("Continue Shoping", "Products", "Home", null, new { @class = "btn btn-info" })
        @if (Session["userId"] != null)
        {
            @Html.ActionLink("Go to Your Account", "Account", "Home", new { Id = Model.Id }, new { @class = "btn btn-info" });
        }
    </div>
</div>


