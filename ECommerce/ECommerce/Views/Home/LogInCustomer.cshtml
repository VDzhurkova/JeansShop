@model ECommerce.Models.Customer


<fieldset id="login">
    <legend class="bg-info">Log In</legend>
    @using (Html.BeginForm("LogInCustomer", "Home", FormMethod.Post))
    {
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Email", htmlAttributes: new { @class = "cntrol-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("txtEmail", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("txtEmail", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "cntrol-label col-md-2" })
                <div class="col-md-10">
                    @Html.Password("txtPassword", new { @class = "form-control"})
                    @Html.ValidationMessage("txtPassword", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input class="btn btn-info" type="submit" value="Log In" />
                </div>
            </div>
        </div>
    }
</fieldset>

