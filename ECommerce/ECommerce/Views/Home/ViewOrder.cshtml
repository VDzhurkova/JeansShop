@model IEnumerable<ECommerce.Models.Order>

@{
    ViewBag.Title = "ViewOrder";
}

<div class="pageHeader page-header">
    <h3>Your Placed Orders</h3>
</div>
@if (Model.Count() == 0) {
    <div class="text-center text-info"><p style="font-size:15px;font-weight:700">No placed orders yet</p></div>
}
<div class="container" id="orders">
    @{var i = 1;}
    @foreach (var item in Model)
    {
        <table class="table table-responsive">
            <thead>
               
                <tr><th><p>Order #@i</p></th> <th class="pull-right">@item.Date</th></tr>
                @{ i++;}
            </thead>
            <tbody>
               <tr>
                   @Html.Action("ViewDetails", new { Id = @item.Id})
               </tr>
                
               
            </tbody>
            <tfoot style="background:#0094ff;color:#ffffff">
                <tr>
                   
                    <td colspan="6" style="font-weight:700">Total:</td>
                    <td>&#163;@item.Amount</td>
                </tr>
                <tr>
                    @if (@item.IsShipped == false)
                    {
                        <td><p style="color:#0094ff">Processing Order....</p></td>
                    }

                    else
                    {
                        <td><p style="color:#00ff90">Dispatched</p></td>
                    }

             
                </tr>
            </tfoot>
        </table>
        <br/>
    }
</div>

